journal = {Water Resources Research},
keywords = {hydroclimatology,multimodel,probabilistic verification,seasonal forecasting},
number = {7},
pages = {6030--6052},
title = {{A robust multimodel framework for ensemble seasonal hydroclimatic forecasts}},
