author = {Arnell, N W and Hudson, D A and Jones, R G},
doi = {10.1029/2002JD002782},
issn = {0148-0227},
journal = {Journal of Geophysical Research},
number = {D16},
pages = {4519},
title = {{Climate change scenarios from a regional climate model: Estimating change in runoff in southern Africa}},
url = {http://doi.wiley.com/10.1029/2002JD002782},
volume = {108},
year = {2003}
}
