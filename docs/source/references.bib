issn = {1879-1026},
journal = {Science of the Total Environment},
month = {aug},
pages = {S117----S131},
pmid = {23928370},
title = {{Future water resources for food production in five South Asian river basins and potential for adaptation - A modeling study.}},
volume = {468-469},
year = {2013}
}
