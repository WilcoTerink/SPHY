doi = {10.1016/j.agsy.2006.11.019},
issn = {0308521X},
journal = {Agricultural Systems},
keywords = {epic,gis,irrigated and rainfed production,virtual water trade},
number = {2},
pages = {478--493},
title = {{GEPIC – modelling wheat yield and crop water productivity with high resolution on a global scale}},
