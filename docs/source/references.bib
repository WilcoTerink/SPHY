file = {:C$\backslash$:/Users/wilco/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Peleg et al. - 2017 - Partitioning the impacts of spatial and climatological rainfall variability in urban drainage modeling.pdf:pdf},
journal = {Hydrol. Earth Syst. Sci},
pages = {1559--1572},
title = {{Partitioning the impacts of spatial and climatological rainfall variability in urban drainage modeling}},
